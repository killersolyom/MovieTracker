<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tv_cast_item_layout"
    android:layout_width="88dp"
    android:layout_height="128dp"
    android:stateListAnimator="@drawable/cast_component_animator"
    android:focusable="true">

    <ImageView
        android:id="@+id/actor_profile_picture"
        android:background="@drawable/cast_background_image"
        android:scaleType="fitCenter"
        android:layout_width="88dp"
        android:layout_height="88dp"
        tools:ignore="ContentDescription" />

    <ProgressBar
        android:id="@+id/profile_picture_loading_progress"
        android:layout_weight="2"
        android:layout_width="88dp"
        android:layout_height="88dp"
        tools:ignore="ObsoleteLayoutParam" />

    <TextView
        android:id="@+id/cast_actor_name"
        android:layout_width="78dp"
        android:layout_height="36dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_below="@+id/actor_profile_picture"
        android:textAlignment="center"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="14sp"
        android:textColor="@color/colorWhite" />

</RelativeLayout>